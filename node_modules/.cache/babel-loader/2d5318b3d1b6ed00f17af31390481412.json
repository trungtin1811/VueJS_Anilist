{"ast":null,"code":"import GenreList from \"./GenreList.vue\";\nexport default {\n  name: \"data-sub-section\",\n  props: {\n    no: Number,\n    anime: Object\n  },\n\n  data() {\n    return {\n      genres: []\n    };\n  },\n\n  components: {\n    GenreList\n  },\n  methods: {\n    display(id) {\n      document.querySelector(\"#anime-\" + id).classList.add(\"hover-data-active\");\n    },\n\n    getNewEp() {\n      if (this.anime?.nextAiringEpisode?.episode != undefined) {\n        return \"Ep \" + this.anime?.nextAiringEpisode?.episode + \" airing in \" + (this.getDays(this.anime?.nextAiringEpisode?.timeUntilAiring) > 0 ? this.getDays(this.anime?.nextAiringEpisode?.timeUntilAiring) + \" day\" : this.getHours(this.anime?.nextAiringEpisode?.timeUntilAiring));\n      } else {\n        return this.anime?.season + \" \" + this.anime?.seasonYear;\n      }\n    },\n\n    getDays(sec) {\n      return Math.floor(sec / 86400) > 1 ? Math.floor(sec / 86400) + \" days\" : Math.floor(sec / 86400) + \" day\";\n    },\n\n    getHours(sec) {\n      return Math.floor(sec / 86400 * 60) > 1 ? Math.floor(sec / 86400 * 60) + \" hours\" : Math.floor(sec / 86400 * 60) + \" hour\";\n    },\n\n    hide(id) {\n      document.querySelector(\"#anime-\" + id).classList.remove(\"hover-data-active\");\n    }\n\n  },\n\n  created() {\n    this.genres = this.anime?.genres?.slice(0, 3);\n  }\n\n};","map":{"version":3,"mappings":"AA8CA,OAAOA,SAAP,MAAsB,iBAAtB;AACA,eAAe;AACbC,MAAI,EAAE,kBADO;AAEbC,OAAK,EAAE;AACLC,MAAE,EAAEC,MADC;AAELC,SAAK,EAAEC;AAFF,GAFM;;AAMbC,MAAI,GAAG;AACL,WAAO;AAAEC,YAAM,EAAE;AAAV,KAAP;AACD,GARY;;AASbC,YAAU,EAAE;AACVT;AADU,GATC;AAYbU,SAAO,EAAE;AACPC,WAAO,CAACC,EAAD,EAAK;AACVC,cAAQ,CAACC,aAAT,CAAuB,YAAYF,EAAnC,EAAuCG,SAAvC,CAAiDC,GAAjD,CAAqD,mBAArD;AACD,KAHM;;AAIPC,YAAQ,GAAG;AACT,UAAI,KAAKZ,KAAL,EAAYa,iBAAZ,EAA+BC,OAA/B,IAA0CC,SAA9C,EAAyD;AACvD,eACE,QACA,KAAKf,KAAL,EAAYa,iBAAZ,EAA+BC,OAD/B,GAEA,aAFA,IAGC,KAAKE,OAAL,CAAa,KAAKhB,KAAL,EAAYa,iBAAZ,EAA+BI,eAA5C,IAA+D,CAA/D,GACG,KAAKD,